/* pages/songsSheet/index.wxss */
.top {
  margin-top: 30rpx;
  display   : flex;
}

.topLeft {
  width   : 65%;
  position: relative;
  z-index : 15;
}

.topLeft image {
  border       : 1rpx solid #ffffff20;
  overflow     : hidden;
  border-radius: 15rpx;
  box-shadow   : 0px 6px 30px rgba(0, 0, 0, 0.5);
  width        : 100%;
}

.topRight {
  width   : 35%;
  position: relative;
}

.collect {
  float           : right;
  width           : 210rpx;
  height          : 100rpx;
  border-radius   : 20rpx 0 0 20rpx;
  background-color: #00d9b1;
  color           : white;
  line-height     : 110rpx;
  text-align      : center;
  font-size       : 26rpx;
  font-family     : 'Fira Code', Consolas, 'Courier New', monospace;
}

.otherLike {
  position        : absolute;
  left            : -20rpx;
  top             : 30%;
  width           : 180rpx;
  height          : 300rpx;
  background-color: #00000030;
  border          : solid 1px #4a4a4a30;
  border-radius   : 15rpx;
  padding-left    : 50rpx;
  padding-right   : 30rpx;
}

.inOther {
  margin-top : 35rpx;
  line-height: 1.8;
}

.inOther view {
  color         : #fff;
  font-size     : 28rpx;
  letter-spacing: 3rpx;
  height        : 140rpx;
  overflow      : hidden;
}

.inOther:nth-child(2) view {
  color      : #919191;
  white-space: nowrap;
}

.songs {
  width     : 680rpx;
  float     : right;
  font-size : 34rpx;
  margin-top: 30rpx;
}

.song {
  margin-top   : 40rpx;
  display      : flex;
  height       : 75rpx;
  border-bottom: 1rpx solid #ffffff35;
  padding-left : 30rpx;
  line-height  : 75rpx;
}

.name {
  width       : 85%;
  color       : white;
  word-break  : keep-all;
  overflow    : hidden;
  white-space : nowrap;
  margin-right: 50rpx;
  font-size   : 26rpx;
}

