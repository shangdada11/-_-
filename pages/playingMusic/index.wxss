/* pages/playingMusic/index.wxss */
page {
  text-align: center;
}

.songTitle {
  margin-top: 40rpx;
  color     : #ffffffd0;
  font-size : 42rpx;
}

.singer {
  color     : #ffffffa0;
  font-size : 32rpx;
  margin-top: 10rpx;
}

.songImg {
  margin       : 150rpx auto;
  width        : 700rpx;
  height       : 700rpx;
  border-radius: 50rpx;
  overflow     : hidden;
  position     : relative;
}

.songImg i {
  color      : #ffffffa0;
  text-align : center;
  line-height: 700rpx;
  position   : absolute;
  left       : calc(50% - 50rpx);
  font-size  : 100rpx;
  z-index    : 15;
}

.songImg image {
  width  : 100%;
  opacity: 0.5;
}