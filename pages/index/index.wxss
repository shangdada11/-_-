.icon-bofang {
  color: #919191 !important;
}

.indexSwiper {
  text-align   : center;
  border-radius: 20rpx;
  overflow     : hidden;
  width        : 680rpx;
  margin       : 40rpx auto;
}

image {
  height: 100%;
}

.navs {
  width  : 710rpx;
  margin : 0 auto;
  display: flex;
  height : 150rpx;
}

.nav {
  color     : #fff;
  flex      : 1;
  margin    : 0 auto;
  text-align: center;
}

.nav i {
  font-size: 40rpx;
  color    : rgba(255, 255, 255, 0.911);
}

.navImg {
  margin: 10rpx auto;
}

.navName {
  margin-top: 20rpx;
  font-size : 26rpx;
  color     : #919191;
}

.recSongSheet {
  width : 680rpx;
  margin: 0 auto;
}

.more {
  float: right;
}

.more button {
  border-radius: 30rpx;
  font-size    : 24rpx !important;
  color        : #ffffff9a !important;
  border       : 1rpx solid #ffffff9a;
}

.h1 {
  font-weight: bolder;
  font-size  : 36rpx;
  color      : #fff;
  line-height: 1.5;
}

.asd {
  overflow  : hidden;
  width     : 100%;
  margin-top: 20rpx;
}

.songSheets {
  display   : flex;
  width     : 200%;
  overflow-x: auto;
  color     : #fff;
  height    : 350rpx;
  margin-top: 30rpx;
}

.songSheet {
  width : 17%;
  margin: 0 11rpx;
}

.songSheet:nth-child(1) {
  margin-left: 0;
}

.songSheet:nth-last-child(1) {
  margin-right: 0;
}

.songSheetImg {
  width        : 100%;
  height       : 200rpx;
  border-radius: 15rpx;
  overflow     : hidden;
}

.songSheetTitle {
  margin-top : 10rpx;
  height     : 60rpx;
  font-size  : 25rpx;
  overflow   : hidden;
  line-height: 1.4;
}

.recSongss,
.recRankSongs,
.newMVs {
  color: #fff;
}

.recSongs,
.rankSongs {
  margin-top: 40rpx;
}

.recSong,
.rankSong {
  margin-top: 20rpx;
  width     : 100%;
  height    : 140rpx;
  display   : flex;
}

.recSongsImg,
.rankSongsImg {
  flex         : 2.7;
  margin       : 0 auto;
  border-radius: 15rpx;
  overflow     : hidden;
}

.recSongsImg image {
  border-radius: 15rpx;
}

.recSongsName,
.rankSongsName {
  margin     : 0 40rpx;
  padding-top: 10rpx;
  line-height: 2;
  flex       : 8;
}

.recSongsName view:nth-child(2),
.rankSongsName view:nth-child(2) {
  color    : #c1c1c1;
  font-size: 26rpx;
}

.singgeName {
  color: #919191;
  float: right;
}

.recSongPlay,
.rankSongPlay {
  flex       : 1;
  margin     : 0 auto;
  line-height: 120rpx;
}

.recRankSongs,
.newMVs {
  margin-top: 70rpx;
}

.recRankSongs {
  margin-bottom: 50rpx;
}

.newMVs {
  margin-bottom: 80rpx;
}

.rankSongs {
  padding      : 4rpx 0;
  border-radius: 40rpx 15%;
  border-radius: 50rpx 5%;
}

.mvs {
  margin-top           : 40rpx;
  display              : grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows   : 1fr 1fr;
}

.mv {
  width        : 90%;
  height       : 290rpx;
  margin       : 20rpx auto;
  border-radius: 20rpx;
  border       : 1rpx solid #43434d50;
  overflow     : hidden;
  background   : #15161D99;
  box-shadow   : 20rpx 20rpx 60rpx #0c0d11,
    -20rpx -20rpx 60rpx #1e1f29;
}

.mvImg {
  width : 100%;
  height: 70%;
  margin: 0 auto;
}

.mvImg image {
  width: 100%;
}

.mvTitle {
  margin     : 0 20rpx;
  margin-top : -10rpx;
  line-height: 1.85;
  font-size  : 24rpx;
}